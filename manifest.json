{
  "author": "igorlogius",
  "description": "copy active tab url as a html anchor segment via pageAction or shortcut",
  "icons": {
    "48": "icon.png"
  },
  "background": {
	"scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "copy-taburl-html",
  "page_action": {
    "browser_style": true,
    "show_matches": [
      "<all_urls>"
    ],
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  "version": "1.0.0"
}
