{
  "author": "igorlogius",
  "background": {
	"scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html"
  },
  "commands": {
    "copy-action": {
      "suggested_key": {
        "default": "Alt+Shift+C"
      }
    }
  },
  "description": "Copy current tab url as a HTML anchor/link via pageAction or browserActon button or custom keyboard shortcut ",
  "icons": {
    "128": "icon.svg"
  },
  "manifest_version": 2,
  "name": "Copy Tab URL as HTML",
  "optional_permissions": [
    "tabs"
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "version": "1.4.10"
}
