{
  "author": "igorlogius",
  "homepage_url": "https://addons.mozilla.org/firefox/addon/copy-taburls",
  "background": {
	"scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "theme_icons": [
      {
        "light": "dark.png",
        "dark": "light.png",
        "size": 128
      }
    ]
  },
  "commands": {
    "allhtm": {
      "description": "Copy All Open Tabs as Links (🔗)",
      "suggested_key": {
        "default": "F1"
      }
    },
    "alltxt": {
      "description": "Copy All Open Tabs as Text (✏️)",
      "suggested_key": {
        "default": "F2"
      }
    },
    "selhtm": {
      "description": "Copy Selected Tabs as Links (🔗)",
      "suggested_key": {
        "default": "F3"
      }
    },
    "seltxt": {
      "description": "Copy Selected Tabs as Text (✏️)",
      "suggested_key": {
        "default": "F4"
      }
    }
  },
  "icons": {
    "256": "icon.svg"
  },
  "manifest_version": 2,
  "name": "Copy TabURLs",
  "permissions": [
    "clipboardWrite",
    "tabs"
  ],
  "version": "1.9.14"
}
